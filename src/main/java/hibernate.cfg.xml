<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>

    <session-factory>

        <!-- JDBC Database connection settings -->
        <property name="connection.driver_class">com.microsoft.sqlserver.jdbc.SQLServerDriver</property>
        <property name="connection.url">jdbc:sqlserver://10.42.43.100:1433;databaseName=SPARK</property>
        <property name="connection.username">java</property>
        <property name="connection.password">123</property>
        <property name="hibernate.default_schema">TEST</property>

        <!-- Select our SQL dialect -->
        <property name="dialect">org.hibernate.dialect.SQLServerDialect</property>


        <!-- JDBC connection pool settings ... using built-in test pool -->
        <property name="connection.pool_size">15</property>



        <!--Настройки пакетной обработки-->
        <property name="hibernate.jdbc.batch_size">500</property>
        <property name="hibernate.order_inserts">false</property>
        <property name="hibernate.order_updates">false</property>
        <property name="hibernate.generate_statistics">false</property>

        <!-- Echo the SQL to stdout -->
        <property name="show_sql">false</property>

		<!-- Set the current session context -->
		<property name="current_session_context_class">thread</property>
 
    </session-factory>

</hibernate-configuration>